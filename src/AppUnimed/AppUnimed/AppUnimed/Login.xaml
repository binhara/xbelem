<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUnimed.Login"
              >
    <ContentPage.Content >
        <StackLayout Padding="30" >

            <Image x:Name="logo_unimed" Source="logo_unimed.png" HorizontalOptions="Start" Margin="0,10,0,0" WidthRequest="150" />


            <Label Text="Login ou registro utilizando seu email e senha" VerticalOptions="StartAndExpand" HorizontalOptions="Start" Margin="0,60,0,0" FontSize="Medium" />
            <Label Text="Login ou registro utilizando seu email e senha" VerticalOptions="StartAndExpand" HorizontalOptions="Start" Margin="0,0,0,0" FontSize="Micro"/>


            <Entry x:Name="login" Placeholder="CPF" Margin="0,20,0,0" />
            <Entry x:Name="senha" Placeholder="Senha" Margin="0,5,0,0" />


            <Button x:Name="Entrar" Text="Entrar" Margin="0,30,0,0" BorderRadius="15" BorderWidth="5"/>
            <Button x:Name="Cadastrar" Text="Cadastre-se" Margin="0,0,0,0" BorderRadius="15" BorderWidth="5" />
            <Button x:Name="Telefones" Text="Telefones úteis" Margin="0,30,0,0" BorderRadius="15" BorderWidth="5"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>